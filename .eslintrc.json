{
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"      
    },
    "extends": [
      "airbnb-base",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended"
    ],
    "plugins": ["prettier", "jest"],    
    "rules": {
      "no-param-reassign": "off",
      "no-case-declarations": "off",
      "no-duplicate-imports": "error",
      "no-console": "off",
      "import/extensions": ["error", "ignorePackages", { "js": "always" }]
    }
  }