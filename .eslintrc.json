{
    "env": {
      "browser": true,
      "node": true    
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"      
    },
    "extends": [
      "airbnb-base",
      "eslint:recommended",
      "plugin:prettier/recommended"      
    ],
    "plugins": ["prettier"],    
    "rules": {
      "prettier/prettier": [ "error",
        {
          "useTabs": false
        } 
      ],
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "no-tabs": ["error"],      
      "no-param-reassign": "off",
      "no-case-declarations": "off",
      "no-duplicate-imports": "error",
      "no-console": "off",
      "import/extensions": ["error", "ignorePackages", { "js": "always" }]
    }
  }